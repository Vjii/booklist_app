<% include ../partials/header %>

	<div class="row">
		<div class="col">

			<a class="button" href="/collections/<%= id%>">Go back</a>
			<h1 class="heading__title vertical_margin-small">Edit the book</h1>

			<form class="form form_rounded" action="/collections/<%= id %>/books/<%= book._id %>?_method=PUT" method="POST">
				<input class="form__input form_rounded vertical_margin-small" type="text" name="book[title]" value="<%= book.title%>">
				<input class="form__input form_rounded vertical_margin-small" type="text" name="book[image]" value="<%= book.image%>">
				<button class="button form__button button__add">Submit changes</button>
			</form>
			<a class="vertical_margin-small" href="/collections/<%= id%>">
					<button class="button button__add">Done</button>
			</a>

			<% var ideaCount = 1; %>
	  	<h1 class="heading__title vertical_margin-small">Edit noted ideas</h1>
	  	<% book.ideas.forEach(function(idea) { %>
	  		<h3>Idea #<%= ideaCount%></h3>
	  		<% ideaCount++%>
				<div class="form__ideas__container">
					<form class="form form_rounded" action="/collections/<%= id%>/books/<%= book.id %>/ideas/<%= idea.id%>?_method=PUT" method="POST">
						<input class="form__input form_rounded vertical_margin-small" type="text" name="idea[name]" placeholder value="<%= idea.name%>">
						<textarea class="form__textarea form_rounded vertical_margin-small" name="idea[description]"><%= idea.description%></textarea>
						<button class="button button__add vertical_margin-small">Edit idea note</button>
					</form>
				</div>
	  	<% }) %>



		</div>
	</div>

<% include ../partials/footer %>
