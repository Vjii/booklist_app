<% include ../partials/header %>

	<div class="row">
		<div class="col">

			<h1 class="heading__title vertical_margin-small">Edit the book</h1>
			<form class="form form_rounded" action="/collections/<%= id%>/books/<%= book._id%>?_method=PUT" method="POST">
				<input class="form__input form_rounded vertical_margin-small" type="text" name="book[title]" value="<%= book.title%>">
				<input class="form__input form_rounded vertical_margin-small" type="text" name="book[image]" value="<%= book.image%>">
				<textarea class=" form__textarea form_rounded vertical_margin-small" name="book[description]"><%= book.description%></textarea>
				<button class="button form__button">Submit changes</button>
			</form>

		</div>
	</div>

<% include ../partials/footer %>
