<% include ../partials/header %>
	<div class="row">
		<div class="col">
			<div class="form__container">
				<h1 class="heading__title vertical_margin-small">Add book to your collection</h1>
				<form class="form form_rounded form padding-small" action="/collections/<%= id%>/books" method="POST">
					<input class="form__input form_rounded vertical_margin-small" type="text" name="book[title]" placeholder="Title of the book">
					<input class="form__input form_rounded vertical_margin-small" type="text" name="book[image]" placeholder="Cover image of the book">

					<div class="form__ideas__container">
						<div>
							<input class="form__input form_rounded vertical_margin-small" type="text" name="book[ideaOne]" placeholder="Name of the idea">
							<textarea class="form__textarea form_rounded vertical_margin-small" name="book[descriptionOne]" placeholder="Description of the idea - what is its value? How can it be used?"></textarea>
						</div>
						<div>
							<input class="form__input form_rounded vertical_margin-small" type="text" name="book[ideaTwo]" placeholder="Name of the idea">
							<textarea class="form__textarea form_rounded vertical_margin-small" name="book[descriptionTwo]" placeholder="Description of the idea - what is its value? How can it be used?"></textarea>
						</div>
						<div>
							<input class="form__input form_rounded vertical_margin-small" type="text" name="book[ideaThree]" placeholder="Name of the idea">
							<textarea class="form__textarea form_rounded vertical_margin-small" name="book[descriptionThree]" placeholder="Description of the idea - what is its value? How can it be used?"></textarea>
						</div>
					</div>

					<button class="button button__add vertical_margin-small">Add book</button>
			  </form>
			</div>
		</div>
	</div>
<% include ../partials/footer %>
