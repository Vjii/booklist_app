<% include ../partials/header %>
<div class="container">
	<div class="grid__row">
		<div class="grid__col">
			<div class="form form--standalone">
				<form class="form__inner" action="/collections/<%= id %>/categories/<%= category._id %>/clusters" method="POST">
					<a class="link" href="/collections/<%= id %>">Go to collection</a>
					<h2>Add ideas</h2>
					<h3>Step 2</h3>
					<h3>Add sources of ideas about <%= category.name%></h3>
	  			<p>Newly added idea sources will appear below. </p>
	  			<p>Ideas source can be a person, a book, a theory, you... or anything else, depending on where they came from.</p>
	  			<p>Where does this group of ideas come from?</p>
	  			<p><em> Click "Done" when you've finished adding sources. </em></p>
					<fieldset class="form__fieldset">
						<legend> Source of ideas </legend>
						<label class="form__item form__item--label" for="source[name]">Name of the source:</label>
						<input class="form__item form__item--input" type="text" name="source[name]" placeholder="Name">
						<label class="form__item form__item--label" for="source[name]">Label for the source:</label>
						<input class="form__item form__item--input" type="text" name="source[label]" placeholder="Book? Podcast?..."></input>
						<label class="form__item form__item--label" for="source[name]">Image of the source</label>
						<input class="form__item form__item--input" type="text" name="source[image]" placeholder="Image link"></input>
					</fieldset>
					<button class="form__item form__item--button">Submit</button>
					<a class="form__item form__item--button" href="/collections/<%= id %>/categories/<%= category._id%>">Done</a>
				</form>
			</div>
		</div>
	</div>
	<% if (category.clusters) { %>
		<% category.clusters.forEach(function(cluster) { %>
			<div class="grid__row">
				<div class="grid__col grid__col--no-padding">
					<div class="form form--standalone">
						<form class="form__inner" action="/collections/<%= id %>/categories/<%= category._id %>/clusters/<%= cluster._id%>?_method=PUT" method="POST">
							<a class="link" href="/collections/<%= id %>">Go back</a>
							<h2><%= cluster.source.name %></h2>
							<p>This source has already been added to the category.</p>
							<p>You can edit it below.</p>
							<fieldset class="form__fieldset">
								<legend>Edit source of ideas</legend>
								<label class="form__item form__item--label" for="source[name]">Name of the source:</label>
								<input class="form__item form__item--input" type="text" name="source[name]" value="<%= cluster.source.name%>">
								<label class="form__item form__item--label" for="source[name]">Label for the source:</label>
								<input class="form__item form__item--input" type="text" name="source[label]" value="<%= cluster.source.label%>">
								<label class="form__item form__item--label" for="source[name]">Image of the source</label>
								<input class="form__item form__item--input" type="text" name="source[image]" value="<%= cluster.source.image%>">
							</fieldset>
							<button class="form__item form__item--button">Submit</button>
						</form>
					</div>
				</div>
			</div>
		<% }) %>
	<% } %>
</div>

<% include ../partials/footer %>
