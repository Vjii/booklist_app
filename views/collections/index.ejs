<% include ../partials/header %>

		<div class="row">
			<div class="col">
				<a class="button" href="/collections/new">Create your own collection</a>
			</div>
		</div>
		<div class="row">
				<% collections.forEach(function(collection) { %>

					<div class="col collection">
						<div class="names">
							<h3 class="heading_margin-small"><%= collection.author.username %></h3>
						</div>
						<div class="profiles">

							<a class="button" href="/collections/<%= collection._id%>">
								View the collection
							</a>
							<p>
								<%= collection.description%>
							</p>
								<img class="profile__image " src="<%= collection.author.image%>">

						</div>

					</div>

				<% }); %>
		</div>

<% include ../partials/footer %>
