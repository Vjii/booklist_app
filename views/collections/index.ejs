<% include ../partials/header %>

		<div class="row">
			<div class="col">
				<a class="button" href="/collections/new">Create your own collection</a>
			</div>
		</div>
		<div class="row">
				<% collections.forEach(function(collection) { %>

					<div class="col collection">
						<div class="names">
							<h3 class="heading_margin-small"><%= collection.author.username %></h3>
						</div>
						<div class="profiles">

							<a href="/collections/<%= collection._id%>">
								<p>
									<button class="button button__full vertical_margin-small">View the collection</button>
								</p>
							</a>
							<p>
								<%= collection.description%>
								<img class="image " src="<%= collection.author.image%>">
							</p>
						</div>

					</div>

				<% }); %>
		</div>

<% include ../partials/footer %>
