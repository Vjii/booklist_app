<% include ../partials/header %>
<div class="container">
	<div class="grid__row">
		<div class="grid__col grid__col--no-padding">
			<div class="form form--standalone">
				<form class="form__inner" action="/collections/<%= id %>/categories/<%= category._id %>/clusters/<%= cluster._id %>/ideas" method="POST">
					<a class="link" href="/collections/<%= id %>">Go to collection</a>
					<h2 class="">Add ideas</h2>
					<h3>Step 3</h3>
					<h3>Add ideas to the selected source</h3>
					<p><strong>Category:</strong> <%= category.name %></p>
					<p><strong>Source:</strong> <%= cluster.source.name %></p>
					<p>You can add as many ideas as you want.</p>
					<p>Newly added ideas will appear below.</p>
					<p><em>Click "Done" when you're finished.</em></p>
					<fieldset class="form__fieldset">
						<legend>New idea</legend>
						<label class="form__item form__item--label for="idea[name]">Name:</label>
						<input class="form__item form__item--input" type="text" name="idea[name]" placeholder="Name the idea">
						<label class="form__item form__item--label for="idea[description]">Description:</label>
						<textarea class="form__item form__item--textarea" name="idea[description]" placeholder="Notes about the idea"></textarea>
					</fieldset>
					<button class="form__item form__item--button">Submit</button>
					<a class="form__item form__item--button" href="/collections/<%= id %>/categories/<%= category._id%>">Done</a>
				</form>
			</div>
		</div>
	</div>
	<% if (cluster.ideas) { %>
		<% cluster.ideas.forEach(function(idea) { %>
			<div class="grid__row">
				<div class="grid__col grid__col--no-padding">
					<div class="form form--standalone">
						<form class="form__inner" action="/collections/<%= id%>/categories/<%= category._id %>/clusters/<%= cluster._id%>/ideas/<%= idea._id%>?_method=PUT" method="POST">
							<a class="link" href="/collections/<%= id %>">Go back</a>
							<h2><%= idea.name %></h2>
							<p>This idea has already been added to the cluster.</p>
							<p>You can edit it below.</p>
							<fieldset class="form__fieldset">
								<legend>Edit idea notes</legend>
								<input class="form__item form__item--input" type="text" name="idea[name]" value="<%= idea.name%>">
								<textarea class="form__item form__item--textarea" name="idea[description]"><%= idea.description %></textarea>
							</fieldset>
							<button class="form__item form__item--button">Submit</button>
						</form>
					</div>
				</div>
			</div>
		<% }) %>
	<% } %>
</div>

<% include ../partials/footer %>
